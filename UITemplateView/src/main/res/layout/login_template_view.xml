<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_template"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing40"
        android:layout_marginRight="@dimen/spacing40"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_logo" />
        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing20"
            android:hint="E-mail address"
            android:drawablePadding="@dimen/spacing10"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/text_black"
            android:drawableLeft="@drawable/login_email"/>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing10"
            android:hint="••••••••"
            android:textSize="@dimen/text_middle"
            android:drawablePadding="@dimen/spacing10"
            android:textColor="@color/text_black"
            android:drawableLeft="@drawable/login_pwd"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_background"
            android:textSize="@dimen/text_large"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/spacing20"
            android:text="Sign in"/>
        <TextView
            android:id="@+id/login_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_middle"
            android:text="Forgot password?"/>
    </LinearLayout>
</RelativeLayout>